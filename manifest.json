{
    "manifest_version": 2,

    "name": "T800 Popup Blocker",
    "short_name": "123456789012",
    "description": "It will stop unwanted popup. Hasta la vista, baby!",
    "version": "0.9.1.2",

    "browser_action": {
        "default_icon": "icons/app.png",
        "default_title": "Click to toggle popup protection"
    },
    "permissions": [
        "tabs",
        "activeTab"
    ],
    "background": {
        "page": "main.html"
    },
    "commands": {
        "toggle": {
            "suggested_key": {
                "default": "Ctrl+Shift+1"
            },
            "description": "Toggle the popup protection"
        },
        "add": {
            "suggested_key": {
                "default": "Ctrl+Shift+2"
            },
            "description": "Add current website to blacklist"
        },
        "clean": {
            "suggested_key": {
                "default": "Ctrl+Shift+3"
            },
            "description": "Clean blacklist"
        },
        "debug": {
            "suggested_key": {
                "default": "Ctrl+Shift+4"
            },
            "description": "Dev Stuff"
        }
    },
    "icons": {
        "16": "icons/app.png",
        "32": "icons/app.png",
        "48": "icons/app.png",
        "128": "icons/app.png"
    }
}