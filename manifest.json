{
    "manifest_version": 2,

    "name": "__MSG_appName__",
    "short_name": "__MSG_appShortName__",
    "description": "__MSG_appDescription__",
    "version": "0.9.6.0",
    "version_name": "2021 RC1",
    "default_locale": "it",

    "browser_action": {
        "default_title": "__MSG_appActionToggle__",
        "default_popup": "src/popup.html",
        "default_icon": {
            "16": "icons/app.png",
            "24": "icons/app.png",
            "32": "icons/app.png"
        }
    },
    "permissions": [
        "tabs",
        "storage"
    ],
    "background": {
        "page": "main.html"
    },
    "commands": {
        "toggle": {
            "suggested_key": {
                "default": "Ctrl+Shift+1"
            },
            "description": "__MSG_appActionToggle__"
        }
    },
    "icons": {
        "16": "icons/app.png",
        "32": "icons/app.png",
        "48": "icons/app.png",
        "128": "icons/app.png"
    }
}