{
    "manifest_version": 3,
    "name": "__MSG_appName__",
    "short_name": "__MSG_appShortName__",
    "description": "__MSG_appDescription__",
    "version": "1.0.0.0",
    "version_name": "2022 RC4",
    "default_locale": "it",
    "action": {
        "default_title": "__MSG_appActionToggle__",
        "default_popup": "src/popup.html",
        "default_icon": {
            "16": "icons/app.png",
            "24": "icons/app.png",
            "32": "icons/app.png"
        }
    },
    "permissions": [
        "activeTab",
        "tabs",
        "storage",
        "scripting",
        "webNavigation"
    ],
    "host_permissions": [
        "*://*/*",
        "<all_urls>",
        "https://*/",
        "http://*/",
        "file:///*"
    ],
    "background": {
        "service_worker": "./src/main.js"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*/*"
            ],
            "all_frames": true,
            "js": [
                "./src/main2.js"
            ]
        }
    ],
    "icons": {
        "16": "icons/app.png",
        "32": "icons/app.png",
        "48": "icons/app.png",
        "128": "icons/app.png"
    }
}