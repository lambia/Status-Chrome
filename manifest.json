{
    "manifest_version": 2,

    "name": "StatusChrome",
    "description": "Should stop annoying pop-up while watching a movie",
    "version": "0.0.0.2",

    "browser_action": {
        "default_icon": "icons/circle.www.png",
        "default_title": "Click here!"
    },
    "permissions": [
        "activeTab",
        "http://*/*",
        "tabs",
        "background",
        "notifications",
        "storage",
        "webNavigation"
    ],
    "background": {
        "scripts": ["background.js"]
    },
    "commands": {
        "toggle" : {
            "suggested_key": {
                 "default": "Alt+Shift+A" 
            },
            "description": "Toggle the popup protection"
        },
        "add" : {
            "suggested_key": {
                 "default": "Alt+Shift+B" 
            },
            "description": "Add current website to blacklist"
        },
        "clean" : {
            "suggested_key": {
                 "default": "Alt+Shift+C"
            },
            "description": "Clean blacklist"
        },
        "debug" : {
            "suggested_key": {
                 "default": "Alt+Shift+D"
            },
            "description": "Dev Stuff"
        }
    },
    "icons": {
        "16": "icons/circle.www.png", //favicon for tab
        "32": "icons/circle.www.png", //windows
        "48": "icons/circle.www.png", //chrome://extensions
        "128": "icons/circle.www.png" //store
    }
}
